# Application Configuration
APP_NAME=Benz Photography Accounting
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=benz_photography_accounting
DB_USERNAME=root
DB_PASSWORD=

# Authentication
AUTH_SECRET=your-secret-key-here
SESSION_TIMEOUT=3600

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-password
MAIL_FROM_ADDRESS=noreply@benzphotography.com
MAIL_FROM_NAME="Benz Photography Accounting"

# File Upload
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760

# API Configuration
API_KEY=your-api-key-here
API_SECRET=your-api-secret-here

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=stack

# Additional Services (if applicable)
CACHE_DRIVER=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
